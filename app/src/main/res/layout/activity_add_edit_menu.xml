<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/primary"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="-50dp"
                android:alpha="0.1"
                android:background="@android:drawable/button_onoff_indicator_on"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Tambah/Edit Menu"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola menu di kantin"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="-30dp">

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Menu Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Menu"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etMenuName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contoh: Nasi Goreng Spesial"
                        android:padding="14dp"
                        android:background="@color/light_gray"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:layout_marginBottom="16dp"/>

                    <!-- Stand -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stand"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="6dp"/>

                    <Spinner
                        android:id="@+id/spinnerStand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:background="@color/light_gray"
                        android:layout_marginBottom="16dp"/>

                    <!-- Category -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="6dp"/>

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:background="@color/light_gray"
                        android:layout_marginBottom="16dp"/>

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga (Rp)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etMenuPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contoh: 15000"
                        android:padding="14dp"
                        android:background="@color/light_gray"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:layout_marginBottom="16dp"/>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etMenuDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Deskripsikan menu ini..."
                        android:padding="14dp"
                        android:background="@color/light_gray"
                        android:textSize="14sp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:layout_marginBottom="16dp"/>

                    <!-- Availability -->
                    <CheckBox
                        android:id="@+id/cbAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu Tersedia"
                        android:textSize="14sp"
                        android:checked="true"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/success"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/btnSaveMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¾ Simpan Menu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="18dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â† Kembali"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>