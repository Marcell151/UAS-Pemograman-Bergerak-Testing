<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">

        <!-- Avatar Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/light_orange">

            <TextView
                android:id="@+id/tvCustomerIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ‘¤"
                android:textSize="32sp"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Customer"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tvCustomerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ“ Mahasiswa"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvCustomerNimNip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM: 123456789"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvCustomerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ email@example.com"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvCustomerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± 081234567890"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <!-- Badge -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/success"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>